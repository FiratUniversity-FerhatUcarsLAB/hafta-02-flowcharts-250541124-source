BAŞLA

// 1. Öğrenci girişi
YAZ "Öğrenci Numaranızı Girin:"
OKU ogr_no
YAZ "Şifrenizi Girin:"
OKU sifre

EĞER (ogr_no ve sifre DOĞRU ise) YAP
    YAZ "Giriş başarılı."
    
    // 2. Ders listesini görüntüleme
    ders_listesi ← TÜM_DERSLERİ_GETİR()
    YAZ "Alınabilecek Dersler:"
    DÖNGÜ HER ders İÇİN ders_listesi
        YAZ ders.ad, " (", ders.kredi, " kredi, kontenjan:", ders.kontenjan, ")"
    SON_DÖNGÜ

    toplam_kredi ← 0
    secilen_dersler ← BOŞ_LİSTE_OLUŞTUR()

    // 3. Ders ekleme / çıkarma işlemleri
    DÖNGÜ
        YAZ "1-Ders Ekle, 2-Ders Çıkar, 3-Kayıt Tamamla"
        OKU secim

        EĞER secim = 1 İSE
            YAZ "Eklemek istediğiniz dersin kodunu girin:"
            OKU ders_kod
            ders ← DERS_BUL(ders_kod)

            // Kontenjan kontrolü
            EĞER ders.kontenjan = 0 İSE
                YAZ "Bu dersin kontenjanı dolu!"
            DEĞİLSE
                // Ön koşul kontrolü
                EĞER ONKOSUL_SAGLANIYOR_MU(ogr_no, ders) = HAYIR İSE
                    YAZ "Ön koşul dersi tamamlanmamış!"
                DEĞİLSE
                    // Zaman çakışması kontrolü
                    EĞER ZAMAN_CAKISMASI_VAR_MI(secilen_dersler, ders) = EVET İSE
                        YAZ "Zaman çakışması var!"
                    DEĞİLSE
                        // Kredi limiti kontrolü
                        EĞER (toplam_kredi + ders.kredi) ≤ 35 İSE
                            secilen_dersler ← DERS_EKLE(secilen_dersler, ders)
                            toplam_kredi ← toplam_kredi + ders.kredi
                            YAZ "Ders başarıyla eklendi."
                        DEĞİLSE
                            YAZ "Toplam kredi limiti aşıldı (≤ 35)!"
                        BİTİR_EĞER
                    BİTİR_EĞER
                BİTİR_EĞER
            BİTİR_EĞER

        DEĞİLSE_EĞER secim = 2 İSE
            YAZ "Çıkarmak istediğiniz dersin kodunu girin:"
            OKU ders_kod
            secilen_dersler ← DERS_CIKAR(secilen_dersler, ders_kod)
            YAZ "Ders çıkarıldı."
        
        DEĞİLSE_EĞER secim = 3 İSE
            ÇIK_DÖNGÜ
        BİTİR_EĞER

    SON_DÖNGÜ

    // 4. Danışman onayı kontrolü
    gpa ← GPA_GETİR(ogr_no)
    EĞER gpa < 2.5 İSE
        YAZ "Danışman onayı gereklidir!"
    DEĞİLSE
        YAZ "Danışman onayı gerekmiyor."
    BİTİR_EĞER

    // 5. Kayıt özeti ve onay
    YAZ "Kayıt Özeti:"
    DÖNGÜ HER ders İÇİN secilen_dersler
        YAZ ders.ad, " - ", ders.kredi, " kredi"
    SON_DÖNGÜ
    YAZ "Toplam Kredi: ", toplam_kredi

    YAZ "Kaydı onaylıyor musunuz? (E/H)"
    OKU onay
    EĞER onay = "E" İSE
        YAZ "Kayıt başarıyla tamamlandı."
    DEĞİLSE
        YAZ "Kayıt iptal edildi."
    BİTİR_EĞER

DEĞİLSE
    YAZ "Giriş başarısız! Öğrenci numarası veya şifre hatalı."
BİTİR_EĞER

BİTİR
